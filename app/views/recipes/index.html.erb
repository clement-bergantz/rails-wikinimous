<h1>Recipes:</h1>
<br>
<% @recipes.each do |recipe| %>
  <h2><%= recipe.name %></h2>
  <p><%= link_to 'More details', recipe_path(recipe) %></p>
  <p><%= link_to 'Edit recipe', edit_recipe_path(recipe) %></p>
  <p><%= link_to 'Delete recipe', recipe_path(recipe),
          method: :delete,
          data: { confirm: 'Are you sure?' } %></p>
  <br>
<% end %>
<p><%= link_to 'Add a new recipe', new_recipe_path %></p>
